<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.yang.questionnaire.mapper.QuestionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="pers.yang.questionnaire.entity.Question">
        <id column="id" property="id" />
        <result column="questionnaire_id" property="questionnaireId" />
        <result column="user_id" property="userId" />
        <result column="content" property="content" />
        <result column="type" property="type" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, questionnaire_id, user_id, content, type
    </sql>

</mapper>
